<div class="main-area">
	<div class="burgers-container">
		<div class="card" id="card">
			<div class="burgers-title">
				<h2>Burgers Available</h2>
			</div>
			<div class="burgers-list">
				<ul>
					{{#each burgers}}
						{{#unless devoured}}
							<li>
								<div class="burgeritem">{{this.id}}. {{this.burger_name}}</div>
								<button class="devour-btn" data-id="{{this.id}}">Devour!</button>
							</li>
						{{/unless}}
					{{/each}}
				</ul>
			</div>
		</div>
	</div>

	<div class="consumed-container">
		<div class="card2" id="card">
			<div class="consumed-title">
				<h2>Consumed Burgers</h2>
			</div>
			<div class="consumed-list">
				<ul>
					{{#each burgers}}
						{{#if devoured}}
							<li>{{this.id}}. {{this.burger_name}} - Devoured </li>
						{{/if}}
					{{/each}}
				</ul>
			</div>
		</div>
	</div>

	<div class="input-container">
		<div class="card3" id="card">
			<div class="input-title">
				<h2>Add a Burger</h2>
			</div>
			<div class="input-content">
				<form class="create-form">
					<div class="form-group">
						<label for="ca">Burger Name:</label>
						<input type="text" id="burger" name="name">
					</div>

					<button type="submit">Add Burger</button>
				</form>
			</div>
		</div>
	</div>
</div>